<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ednovak.zip"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:icon="@drawable/zip_icon"
        android:label="@string/zip"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ZipMenu"
            android:label="@string/title_activity_zip_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="a" />
        </activity>
        
        <activity android:name=".Freestyle" 
            android:screenOrientation="portrait"/>
        <activity android:name=".zipPreferences"/>
    </application>

</manifest>